- var bodyClass;

doctype html
html
  head
    block head
      block title
        title New project
      block meta
        meta(charset='utf-8')
        meta(name='description', content='A new project')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
      block link
        link(rel='stylesheet', href='assets/css/styles.min.css', type='text/css')
      block body
        body(class=bodyClass)
          include header

          block content

          include footer

          script(type='text/javascript', src='assets/js/vendors/jquery.min.js')
          script(type='text/javascript', src='assets/js/main.min.js')
