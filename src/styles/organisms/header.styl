//
// Header
// --------------------------------------------------------------------------

.header {
  margin: 0 0 20px;
  background-color: $color-primary;
}


// Main
// --------------------------------------------------------------------------

.header-main {
  center();
}


// Logo
// --------------------------------------------------------------------------

.header-logo {
  float: left;
  margin: 0 40px 0 0;

  a {
    display: block;
    font-size: 1.8rem;
    line-height: 40px;
    white-space: nowrap;
    color: white;

    +hover() {
      text-decoration: none;
    }
  }

  @media (min-width: $screen-sm-min) {
    a {
      font-size: 2rem;
      line-height: 50px;
    }
  }
}


// Toggle navigation
// --------------------------------------------------------------------------

.header-toggle-navigation {
  position: relative;
  float: right;
  width: 40px;
  height: 40px;
  padding: 0;
  background-color: transparent;
  border: none;
  outline: inherit;
  cursor: pointer;

  span {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    width: 25px;
    height: 3px;
    text-hide();
    background-color: white;
    transform: translate(-50%, -50%);

    &::before,
    &::after {
      content: "";
      position: absolute;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: inherit;
      transition: transform .1s ease-in-out;
    }

    &::before {
      bottom: 8px;
    }

    &::after {
      top: 8px;
    }
  }

  .has-navigation-open & {
    span {
      background-color: rgba(0,0,0,0);

      &::before,
      &::after {
        background-color: white;
      }

      &::before {
        bottom: 0;
        transform: rotate(45deg);
      }

      &::after {
        top: 0;
        transform: rotate(-45deg);
      }
    }
  }

  @media (min-width: $screen-sm-min) {
    display: none;
  }
}


// Navigation
// --------------------------------------------------------------------------

.header-navigation {
  position: absolute;
  top: 0;
  right: 0;
  width: 250px;
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 20px;
  background-color: $color-gray-dark;
  z-index: $zindex-fixed;
  transform: translateX(100%);

  @media (min-width: $screen-sm-min) {
    position: static;
    top: auto;
    right: auto;
    float: left;
    width: auto;
    height: auto;
    overflow: inherit;
    padding: 0;
    background-color: transparent;
    z-index: inherit;
    transform: none;
  }
}

.has-navigation-open {
  transform: translateX(-250px);
}

.header-navigation__list {
  list-unstyled();

  @media (min-width: $screen-sm-min) {
    display: table;
  }
}

.header-navigation__item {
  margin: 0 0 10px;

  a {
    display: block;
    text-transform: uppercase;
    color: white;
  }

  @media (min-width: $screen-sm-min) {
    display: table-cell;
    height: 50px;
    vertical-align: middle;
    padding: 0 10px;

    a {
      text-transform: none;
    }
  }
}
